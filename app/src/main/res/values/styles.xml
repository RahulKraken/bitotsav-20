<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- font styles -->
    <style name="font_regular_black_20">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/md_black_1000</item>
    </style>

    <style name="font_regular_grey_20">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:color">@color/md_grey_500</item>
    </style>

    <style name="font_semi_bold_24_black">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="font_semi_bold_14_dark_grey">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="font_semi_bold_12_dark_grey">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="font_semi_bold_14_black">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <!-- decoration -->
    <style name="time_headers">
        <item name="android:width">64dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:padding">0dp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="timeTextSize">20dp</item>
        <item name="meridiemTextSize">14dp</item>
    </style>

</resources>
