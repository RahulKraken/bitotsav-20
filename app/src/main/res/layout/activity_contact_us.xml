<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ContactUsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guide"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guide"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <include
            android:id="@+id/contact_us_app_bar"
            layout="@layout/app_bar_generic" />

        <TextView
            android:id="@+id/contacts_label"
            android:text="Contact Us"
            android:textAlignment="center"
            style="@style/font_semi_bold_24_black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/contact_us_app_bar"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/container_contact_one"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/contacts_label"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="Nilesh Kumar"
                style="@style/font_regular_black_20"
                android:textColor="@color/md_grey_800"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:text="8521039668"
                android:autoLink="phone"
                android:linksClickable="true"
                style="@style/font_regular_black_20"
                android:textColor="@color/md_grey_900"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_contact_two"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/container_contact_one"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:text="Shreyas Agarwal"
                style="@style/font_regular_black_20"
                android:textColor="@color/md_grey_800"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:text="9471516677"
                android:autoLink="phone"
                android:linksClickable="true"
                style="@style/font_regular_black_20"
                android:textColor="@color/md_grey_900"
                android:textAlignment="viewEnd"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/drop_mail_label"
            android:text="Or drop a mail at"
            style="@style/font_regular_black_20"
            android:textColor="@color/md_black_1000"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/container_contact_two"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/email"
            android:text="bitotsav@bitmesra.ac.in"
            style="@style/font_regular_black_20"
            android:textColor="@color/md_blue_700"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/drop_mail_label"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>