<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NightsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guide"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guide"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <include
            android:id="@+id/nights_app_bar"
            layout="@layout/app_bar_generic" />

        <TextView
            android:id="@+id/header_content"
            android:text="@string/nights_header_content"
            style="@style/font_regular_black_20"
            android:textColor="@color/md_grey_800"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/nights_app_bar"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>