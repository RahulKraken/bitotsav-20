<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ui.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guide"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guide"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />
leader
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="64dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:src="@drawable/user_avatar_normal"
        app:layout_constraintTop_toBottomOf="@id/top_guide"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/profile_name"
        android:text="Name"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        style="@style/font_regular_black_20"
        android:textColor="@color/md_black_1000"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_bitotsav_id_label"
        android:text="Bitotsav Id:  "
        style="@style/font_regular_black_20"
        android:textSize="18sp"
        android:textColor="@color/md_black_1000"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="@id/profile_bitotsav_id"
        app:layout_constraintBottom_toBottomOf="@id/profile_bitotsav_id"
        app:layout_constraintEnd_toStartOf="@id/profile_bitotsav_id"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_bitotsav_id"
        android:text="7895643210"
        android:textSize="18sp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toEndOf="@id/profile_bitotsav_id_label"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_email"
        android:text="dummy dummy dummy"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_bitotsav_id"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_phone"
        android:text="9999999999"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_email"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/profile_clg_id"
        android:text="be/524163/2020"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_phone"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/profile_clg_name"
        android:text="birla institute of technology"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_clg_id"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_clg_city"
        android:text="ranchi"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/profile_clg_name"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_verify_btn"
        android:text="Verify Account"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"
        android:backgroundTint="@color/md_red_500"
        android:fontFamily="@font/product_sans_regular"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_clg_city"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_logout_btn"
        android:text="Logout"
        android:layout_marginTop="48dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/profile_verify_btn"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>