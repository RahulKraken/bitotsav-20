<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profile.ui.ProfileFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guide"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guide"
        android:orientation="vertical"
        app:layout_constraintGuide_end="16dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/top_guide"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="64dp"
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:src="@color/md_grey_300"
        app:layout_constraintTop_toBottomOf="@id/top_guide"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_width="64dp"
        android:layout_height="64dp" />

    <TextView
        android:id="@+id/profile_email"
        android:text="r.rahul4511@gmail.com"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profile_phone"
        android:text="9999999999"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/profile_email"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_verify_btn"
        android:text="Verify Account"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"
        android:backgroundTint="@color/md_red_500"
        android:fontFamily="@font/product_sans_regular"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/profile_phone"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_logout_btn"
        android:text="Logout"
        android:layout_marginTop="48dp"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/profile_verify_btn"
        app:layout_constraintStart_toEndOf="@id/start_guide"
        app:layout_constraintEnd_toStartOf="@id/end_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>