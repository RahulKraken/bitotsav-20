<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/start_guide"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/end_guide"
            app:layout_constraintGuide_end="16dp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <include
            android:id="@+id/info_app_bar"
            layout="@layout/app_bar_generic" />

        <TextView
            android:id="@+id/info_header"
            android:text="Bitotsav 20"
            android:textColor="@color/md_black_1000"
            style="@style/font_regular_black_20"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/info_app_bar"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/core_components_label"
            android:text="@string/info_core_components"
            style="@style/font_regular_black_20"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/info_header"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gson_label"
            android:text="Gson"
            style="@style/font_regular_black_20"
            android:textSize="18sp"
            android:textColor="@color/md_black_1000"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/core_components_label"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/gson_link"
            android:text="\@github.com/google/gson"
            android:autoLink="web"
            style="@style/font_regular_black_20"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/gson_label"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/volley_label"
            android:text="Volley"
            android:textColor="@color/md_black_1000"
            style="@style/font_regular_black_20"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/gson_link"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/volley_link"
            android:text="\@github.com/google/volley"
            android:autoLink="web"
            style="@style/font_regular_black_20"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/volley_label"
            app:layout_constraintStart_toEndOf="@id/start_guide"
            app:layout_constraintEnd_toStartOf="@id/end_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>